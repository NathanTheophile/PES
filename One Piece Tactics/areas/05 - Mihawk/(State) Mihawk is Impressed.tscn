script/source = "extends Node

var state
var porter
var mark
var cell
func stateSetup():
	state = get_parent()
	porter = state.get_parent().get_parent()
	porter.connect(\"turn_end\", self, \"end\")
	connect(\"tree_exiting\",self,\"out\")
	lvlUpdate()

var stay = false
var bonus=0
func lvlUpdate():
	porter.dmgReceiveMltGeneral = 1 + state.lvl*0.1
	stay = true
	if state.lvl == 10:
		BattleMechanics.area.trophies[1] = true
		BattleMechanics.area.ui.crowns.setup(BattleMechanics.area.trophies,BattleMechanics.area.get_node(\"Trophies\").text)
func end():
	if stay:
		stay = false
	else:
		BattleMechanics.procDown(state, 1)
func out():
	porter.dmgReceiveMltGeneral = 1 
