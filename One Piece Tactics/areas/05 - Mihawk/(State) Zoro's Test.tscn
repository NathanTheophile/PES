script/source = "extends Node

var state
var porter
var mark
var cell
func stateSetup():
	state = get_parent()
	porter = state.get_parent().get_parent()
	state.lvl = 1
	BattleMechanics.addState(state.extraStates[0], porter, porter)
	porter.connect(\"turn_end\",   self, \"place\")
	porter.connect(\"turn_end\",   self, \"end\")
	porter.connect(\"turn_start\", self, \"remove\")
	porter.connect(\"dmg_taken\",  self, \"dmg\")
	connect(\"tree_exiting\",self,\"out\")

func place():
	cell = BattleMechanics.getCellInRadius(porter.posit, 2)
	while cell == porter.posit + porter.direction:
		cell = BattleMechanics.getCellInRadius(porter.posit, 2)
	
	mark = BattleMechanics.playAnim(porter.extraStuff[0],cell,false,\"ysort\",Vector2(0,0), true)

func remove():
	if mark:
		mark.queue_free()
		mark = false
		cell = false

func dmg(_1,zoro, b):
	if !b:
		if cell is Vector2 and zoro.posit == cell:
			var I = BattleMechanics.getState(porter,\"Invulnerable\")
			if I:
				BattleMechanics.procDown(I,1)
			else:
				BattleMechanics.addState(state.extraStates[1], porter, porter)
			remove()
			place()

var invul = 0
func end():
	invul += 1
	if invul ==4:
		invul = 0
		var phase=BattleMechanics.getState(porter,\"Phases\")
		if phase and phase.lvl>2:
			BattleMechanics.addState(state.extraStates[0], porter, porter, 2)
			return
		
		BattleMechanics.addState(state.extraStates[0], porter, porter)

"

