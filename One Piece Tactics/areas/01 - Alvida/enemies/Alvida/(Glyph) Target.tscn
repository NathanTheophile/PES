script/source = "extends Node

var glyph
var turns 
var caster
func setup():
	turns = 3
	glyph = get_parent()
	caster = glyph.caster
	caster.connect(\"turn_start\",self,\"boom\")
	caster.connect(\"killed\",self,\"out\")

func boom():
	randomize()
	yield(get_tree().create_timer(float(wrapi(randi(),3,11))/10),\"timeout\")
	
	BattleMechanics.shootProjectile(glyph.extraStates[2],Vector2(30,0),glyph.posit)
	yield(get_tree().create_timer(1),\"timeout\")
	BattleMechanics.playAnim(glyph.extraStates[0],glyph.posit)
	var c = BattleMechanics.getCellInRadius(glyph.posit,2,false,0)
	for i in c:
		BattleMechanics.playAnim(glyph.extraStates[1],i)
		var tgt = BattleMechanics.getEntityAt(i)
		if tgt:
			BattleMechanics.dealDmg({\"base\": 50, \"ignoreDir\": true},tgt,caster)
			if tgt.player:
				BattleMechanics.area.get_node(\"Trophies\").trophy2()
		
	BattleMechanics.removeGlyph(glyph)

func out(_a):
	yield(get_tree().create_timer(1),\"timeout\")
	BattleMechanics.removeGlyph(glyph)
"

