var skill
func effects(targetArray):
	skill = get_parent()
	var d = skill.caster.direction
	
	
	BattleMechanics.playAnimEntity(skill.caster, \"Attack\")
	
	yield(get_tree().create_timer(0.6),\"timeout\")

	var tgt = BattleMechanics.getEntityAt(targetArray[0])

	if tgt:
		BattleMechanics.dealDmg([skill.base,\"n\"],tgt,skill.caster)
		BattleMechanics.removal(\"mp\", 2, skill.caster, tgt)
	BattleMechanics.playAnim(skill.visuals[0],targetArray[0])
	yield(get_tree().create_timer(1),\"timeout\")
			
	
	
	
