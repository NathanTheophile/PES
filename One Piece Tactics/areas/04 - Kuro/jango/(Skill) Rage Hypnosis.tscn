# targetArray = Array contendo as posições que esse feitiço atingiu
#               A célula central será contida em um Array sozinha, para fácil identificação
var skill
func effects(targetArray):
	skill = get_parent()
	
	for i in targetArray:
		if i is Array:
			var c = BattleMechanics.getEntityAt(i[0])
			BattleMechanics.bounceTgt(c)
			c.turn_to(skill.caster.direction *-1)
			break
	
	BattleMechanics.playAnimEntity(skill.caster,\"Hypno\")
	yield(get_tree().create_timer(0.7),\"timeout\")
	
	var aoe = BattleMechanics.orderAoE(targetArray)
	var k = aoe.keys()
	k.sort()
	
	for i in k:
		for j in aoe[i]:
			var tgt = BattleMechanics.getEntityAt(j)
			if tgt:
				BattleMechanics.addState(skill.states[0],tgt,skill.caster)
				BattleMechanics.heal(round(tgt.hp_loss / 2), tgt, skill.caster)
			BattleMechanics.playAnim(skill.visuals[0], j)
		yield(get_tree().create_timer(0.2),\"timeout\")
	
"

