script/source = "extends Node

var state
var porter
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	porter.plays = false
	porter.connect(\"dmg_taken\",self,\"dmg\")
	if porter.player:
		BattleMechanics.connect(\"endPlayersTurn\", self, \"proc_down\")
	else:
		BattleMechanics.connect(\"endEnemysTurn\", self, \"proc_down\")
	connect(\"tree_exiting\",self,\"out\")

func dmg(dmg, attacker, before):
	if !before:
		BattleMechanics.removeState(state)
		
func proc_down():
	BattleMechanics.procDown(state,1)

func out():
	porter.plays = true
"

