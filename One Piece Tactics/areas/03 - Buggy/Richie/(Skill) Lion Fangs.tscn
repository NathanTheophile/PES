	BattleMechanics.playAnim(skill.visuals[0], targetArray[0])
	var tgt = BattleMechanics.getEntityAt(targetArray[0])
	if tgt:
		BattleMechanics.dealDmg([40,\"n\"],tgt,skill.caster)
	yield(get_tree().create_timer(1),\"timeout\")
	
	
			
	
	
	
