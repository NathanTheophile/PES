var skill
func effects(targetArray):
	skill = get_parent()

	
	BattleMechanics.playAnimEntity(skill.caster, \"Bite\")
	
	yield(get_tree().create_timer(0.3),\"timeout\")
	BattleMechanics.playAnim(skill.visuals[1], targetArray[0], false if skill.caster.direction.x == 1 or skill.caster.direction.y == -1 else true)
	
