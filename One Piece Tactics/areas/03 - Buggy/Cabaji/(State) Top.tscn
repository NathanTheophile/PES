func kill(_a):
	if not porter.dead:
		yield(get_tree().create_timer(0.5),\"timeout\")
		BattleMechanics.killEntity(porter,false,false)
func dead(k):
	if k and k.player:
		BattleMechanics.area.trophies[0] = false
		BattleMechanics.area.ui.crowns.fail(0)
