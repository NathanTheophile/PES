		BattleMechanics.dealDmg([40,\"n\"],tgt,skill.caster)
		BattleMechanics.push(tgt,skill.caster,2,skill.caster.direction,[5,\"n\"])
	yield(get_tree().create_timer(1.5),\"timeout\")
	
	
			
	
	
	
