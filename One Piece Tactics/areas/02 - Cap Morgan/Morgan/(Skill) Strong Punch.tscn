var skill
func effects(targetArray):
	skill = get_parent()

	
	BattleMechanics.playAnimEntity(skill.caster, \"Punch\")
	
	yield(get_tree().create_timer(0.9),\"timeout\")

	BattleMechanics.playAnim(skill.visuals[0], targetArray[0])
