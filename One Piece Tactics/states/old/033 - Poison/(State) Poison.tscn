script/source = "extends Node

var state
var porter
var caster
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	porter.connect(\"skill_used\",self,\"shock\")
	porter.connect(\"turn_end\",self,\"end\")
	caster = state.caster
	caster.connect(\"killed\",self,\"cancel\")

var dmg = 0
func shock(_1, _2, b):
	if not b:
		dmg += state.lvl

func end():
	yield(get_tree(),\"idle_frame\")
	if dmg > 0:
		BattleMechanics.dealDmg([dmg, \"n\"], porter, state.caster)
	BattleMechanics.removeState(state)

func cancel(_a):
	BattleMechanics.removeState(state)
"

