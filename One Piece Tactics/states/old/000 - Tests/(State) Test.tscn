var state
var porter
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	porter.connect(\"turn_start\", self, \"affect\")
	porter.connect(\"turn_end\", self, \"warn\")

func affect():
	yield(get_tree().create_timer(1),\"timeout\")
	var cells = BattleMechanics.area.tilemap.get_used_cells()
	var c = []
	var a = []
	
	for i in BattleMechanics.area.entities.get_children():
		if not i.player:
			a.append(i)
	
	for i in cells:
		var m = true
		for j in a:
			if m:
				if BattleMechanics.checkSight(j.posit, i, [j], false):
					m = false
				
		if m:
			c.append(i)
	
	for i in c:
		BattleMechanics.playAnim(state.visuals[0], i)
		
