	porter.connect(\"turn_end\",self,\"turnEnd\")

var activate = true
func dealtDmg(_a,_b,before):
	if not before:
		activate = false

func turnEnd():
	if activate:
		BattleMechanics.addState(state.extraStates[0],porter,porter,1)
	activate = true
