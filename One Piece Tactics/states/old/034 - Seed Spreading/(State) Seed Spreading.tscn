script/source = "extends Node

var state
var porter
var intro = true
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	porter.connect(\"turn_start\",self,\"start\")
	porter.connect(\"dmg_taken\",self,\"hit\")

func start():
	if intro:
		intro = false
		yield(get_tree().create_timer(4),\"timeout\")
	for i in BattleMechanics.area.entities.get_children():
		if i.ent_name==\"Seedling\" and i.get_node(\"AI\").f==1:
			BattleMechanics.playAnimEntity(i,\"burst\")
			var s = BattleMechanics.getState(i,36)
			if s:
				BattleMechanics.removeState(s)
			i.hideSts = true
	
	yield(get_tree().create_timer(1),\"timeout\")
	
	BattleMechanics.playAnimEntity(porter,\"Cast\")
	for _i in state.lvl:
		var c = BattleMechanics.getCellInRadius(BattleMechanics.getRandPlayer().posit, 3, true)
		var m = BattleMechanics.summonMonster(BattleMechanics.area.enemies[7], c, porter, state.extraStates[0], 10)
		m.get_node(\"HPBar\").visible=false
		BattleMechanics.playAnim(state.visuals[0],m.posit)
		yield(get_tree().create_timer(0.1),\"timeout\")
	if state.lvl>1:
		BattleMechanics.procDown(state, state.lvl-1)

func hit(_a,_b,c):
	if not c:
		BattleMechanics.procUp(state,1)
"

