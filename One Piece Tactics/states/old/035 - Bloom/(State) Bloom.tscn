script/source = "extends Node

var state
var porter
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	porter.connect(\"turn_start\",self,\"end\")
	lvlUpdate()
	

var bonus = 0
var stay = false
func lvlUpdate():
	stay = true
	porter.mp -= bonus
	porter.speed = clamp(0.05 * bonus + porter.speed, 0.3, 0.6) 
	bonus = state.lvl
	porter.mp += bonus
	porter.speed = clamp(porter.speed - 0.05 * bonus, 0.3, 0.6) 

func end():
	if not stay:
		porter.mp -= bonus
		porter.speed = 0.6
		BattleMechanics.removeState(state)
	else:
		stay = false
"

