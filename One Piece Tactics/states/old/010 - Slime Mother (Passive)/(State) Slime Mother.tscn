script/source = "extends Node

var state
var porter
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	yield(get_tree(), \"idle_frame\")
	for i in BattleMechanics.area.entities.get_child_count():
		if not BattleMechanics.area.entities.get_child(i).player:
			BattleMechanics.area.entities.get_child(i).connect(\"killed\", self, \"getAngry\")
	BattleMechanics.connect(\"entityAdded\", self, \"hear\")
func hear(entity, _w):
	entity.connect(\"killed\", self, \"getAngry\")

func getAngry(killer):
	BattleMechanics.addState(state.extraStates[0], porter, state.caster, 1)
	if killer:
		porter.turn_to(BattleMechanics.directionTo(porter.posit,killer.posit))
	BattleMechanics.playAnim(state.visuals[0],porter.posit)
"

