script/source = "extends Node

var state
var porter
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	porter.connect(\"turn_start\", self, \"start\")
	porter.connect(\"turn_end\", self, \"end\")

signal started
func start():
	var players = BattleMechanics.allOfTeam()
	yield(get_tree().create_timer(1),\"timeout\")
	for i in players.size():
		for j in 8:
			if BattleMechanics.hasState(players[i],18+j):
				var chargestate = BattleMechanics.getState(players[i],18+j)
				
				
				BattleMechanics.playAnim(
					state.visuals[1 if j < 4 else 0],
					players[i].posit
				)
				
				yield(chargestate.get_node(\"Effects\").affect(),\"completed\")
				BattleMechanics.removeState(chargestate)
				yield(get_tree().create_timer(0.1),\"timeout\")
				break
	
	emit_signal(\"started\")
	

func end():
	randomize()
	var players = BattleMechanics.allOfTeam()
	
	var positiveSt = wrapi(randi(),0,4)
	var negativeSt = wrapi(randi(),4,8)
	
	if players.size()>2:
		for _i in 2:
			var val = wrapi(randi(), 0, players.size())
			
			BattleMechanics.addState(
				state.extraStates[positiveSt],
				players[val],
				porter
			)
			
			players.remove(val)
		
		for i in players.size():
			BattleMechanics.addState(
				state.extraStates[negativeSt],
				players[i],
				porter
			)
			
			
			
			
			
"

