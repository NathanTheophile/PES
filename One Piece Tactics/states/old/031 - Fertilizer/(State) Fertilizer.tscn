script/source = "extends Node

var state
var porter
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	porter.connect(\"turn_start\",self,\"end\")

func end():
	var cells = BattleMechanics.getCellInRadius(porter.posit, 3, false, 0)
	BattleMechanics.playAnimEntity(porter,\"Buff\")
	yield(get_tree().create_timer(0.3),\"timeout\")
	
	for i in cells:
		var tgt = BattleMechanics.getEntityAt(i)
		if tgt and not tgt.player:
			BattleMechanics.playAnim(state.visuals[0],i)
			BattleMechanics.addState(state.extraStates[0],tgt,porter,2)
	yield(get_tree(),\"idle_frame\")
	BattleMechanics.removeState(state)
"

