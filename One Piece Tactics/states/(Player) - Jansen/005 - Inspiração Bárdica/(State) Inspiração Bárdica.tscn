script/source = "extends Node

var state
var porter
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	BattleMechanics.connect(\"entityAdded\",self,\"con\")
	BattleMechanics.connect(\"battleStart\",self,\"prepare\")

func prepare():
	for i in BattleMechanics.area.entities.get_children():
		con(i)
func con(e,_a=false):
	if e.player and e != porter:
		e.connect(\"dmg_dealt\",self,\"increase\",[e])
		e.connect(\"healing\",self,\"increaseH\",[e])

func increase(dmg, attacked, before, attacker):
	if before:
		if BattleMechanics.distanceTo(attacker.posit,porter.posit)<=2:
			BattleMechanics.dmgHolder[attacked.name][0] = ceil(1.3 * BattleMechanics.dmgHolder[attacked.name][0])
func increaseH(dmg, attacked, before, attacker):
	if before:
		if BattleMechanics.distanceTo(attacker.posit,porter.posit)<=2:
			BattleMechanics.healHolder[attacked.name] = ceil(1.3 * BattleMechanics.healHolder[attacked.name])
"

