script/source = "extends Node

var state
var porter
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	state.connect(\"tree_exiting\",self,\"expire\")
	porter.connect(\"turn_start\",self,\"out\")
	lvlUpdate()
	porter.dmgReceiveMltGeneral *= 2

var bonus = 1
func lvlUpdate():
	porter.dmgModMltGeneral /= bonus
	
	bonus = (float(state.lvl) * 0.01) + 1.0
	porter.dmgModMltGeneral *= bonus
	
func out():
	BattleMechanics.removeState(state)

func expire():
	porter.dmgModMltGeneral /= bonus 
	porter.dmgReceiveMltGeneral /= 2
	
