script/source = "extends Node

var state
var porter
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	state.connect(\"tree_exiting\",self,\"expire\")
	porter.connect(\"turn_end\",self,\"remove\")
	lvlUpdate()
	

var bonus = 1
func lvlUpdate():
	porter.dmgModMltGeneral /= bonus
	
	bonus = 1.0 - (float(state.lvl) * 0.01)
	porter.dmgModMltGeneral *= bonus
	

func remove():
	BattleMechanics.removeState(state)

func expire():
	porter.dmgModMltGeneral /= bonus 
	
