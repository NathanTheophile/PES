var state
var porter
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	state.connect(\"tree_exiting\",self,\"expire\")
	lvlUpdate()
	

var bonus = 0
func lvlUpdate():
	porter.dmgModGeneral -= bonus
	
	bonus = state.lvl
	porter.dmgModGeneral += bonus
	

func expire():
	porter.dmgModGeneral -= bonus 
	
