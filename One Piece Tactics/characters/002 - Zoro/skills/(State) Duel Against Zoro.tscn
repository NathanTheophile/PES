script/source = "extends Node

var state
var porter
var zoro
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	zoro = state.caster
	zoro.connect(\"turn_start\",self,\"start\")
	zoro.connect(\"turn_end\",self,\"end\")
	porter.connect(\"dmg_taken\",self,\"check\")
	porter.connect(\"killed\",self,\"breakDuel\")

var check = false
func start():
	check = true
func check(_dmg,attacker,before):
	if not before and attacker==zoro:
		check = false
		return
	elif attacker != zoro and attacker.player:
		breakDuel()

func end():
	if check or BattleMechanics.distanceTo(porter.posit, zoro.posit)>7:
		breakDuel()
	else:
		BattleMechanics.removal(\"ap\",-state.lvl, zoro, zoro)
		BattleMechanics.procUp(state,1)

func breakDuel(_a=false):
	if BattleMechanics.currentPlaying and BattleMechanics.currentPlaying == zoro:
		zoro.ap_used = 0
	BattleMechanics.removeState(state)
"

