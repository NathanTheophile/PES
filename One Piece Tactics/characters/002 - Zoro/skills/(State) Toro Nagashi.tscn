script/source = "extends Node

var state
var porter
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	porter.connect(\"dmg_taken\",self,\"dmg\")
	porter.connect(\"turn_start\",self,\"expire\")
	porter.dmgReceiveMltGeneral *= 0.5

func dmg(_dmg, _attacker, before):
	if before:
		porter.ap_used -= 1
		BattleMechanics.removalVisual(porter.position+Vector2(0,-25)+Vector2(wrapi(randi(), -10, 10), wrapi(randi(), -10, 10)), \"ap\", -1, 0)
		expire()

func expire():
	porter.dmgReceiveMltGeneral /= 0.5
	BattleMechanics.playAnimEntity(porter,\"RESET\")
	BattleMechanics.removeState(state)
	
