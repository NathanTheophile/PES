script/source = "extends Node

var state
var porter
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	porter.connect(\"turn_end\",self,\"end\")
	porter.connect(\"turn_start\",self,\"start\")

func end():
	if porter.hp-porter.hp_loss <= porter.hp*0.5:
		BattleMechanics.addState(state.extraStates[0],porter,porter, 6)

func start():
	var val = [2,2]
	if porter.hp-porter.hp_loss <= porter.hp*0.5:
		val = [3,1]
	for i in porter.skillsUsable:
		match i.skillName:
			\"Tatsu Maki\":
				i.aoeSize = val[0]
			\"Toro Nagashi\":
				i.apCost = val[1]
"

