script/source = "extends Node

var state
var porter
func stateSetup():
	state = get_parent()
	porter = state.get_node(\"../..\")
	state.connect(\"tree_exiting\",self,\"expire\")
	porter.connect(\"turn_end\",self,\"end\")
	lvlUpdate()

var bonusDmg = 1
func lvlUpdate():
	porter.dmgModMltGeneral /= bonusDmg
	bonusDmg = float(state.lvl) * 0.01 + 1.0
	porter.dmgModMltGeneral *= bonusDmg

func expire():
	porter.dmgModMltGeneral /= bonusDmg

func end():
	if porter.hp-porter.hp_loss > porter.hp*0.5:
		BattleMechanics.procDown(state, round(float(state.lvl) * 0.5))
"

