# targetArray = Array contendo as posições que esse feitiço atingiu
#               A célula central será contida em um Array sozinha, para fácil identificação
var skill
func effects(targetArray):
	skill = get_parent()
	var d = skill.caster.direction
	
	AM.play(skill.caster.audioEX[2],{\"randp\": true})
	BattleMechanics.playAnim(skill.visuals[1],skill.caster.posit)
	BattleMechanics.playAnimEntity(skill.caster, \"Hammer\")
	
	yield(get_tree().create_timer(1.1),\"timeout\")
	
	AM.play(skill.caster.audioEX[5],{\"randp\": true})
	BattleMechanics.bounceTgt(skill.caster)
	BattleMechanics.playAnim(skill.visuals[0],targetArray[0])
	
	var tgt = BattleMechanics.getEntityAt(targetArray[0])
	if tgt:
		BattleMechanics.dealDmg(int(skill.base * dmgMod(tgt)), tgt,skill.caster)
		BattleMechanics.push(tgt, skill.caster, 2*dmgMod(tgt), skill.caster.direction)
		
	yield(get_tree().create_timer(0.5),\"timeout\")
	BattleMechanics.playAnimEntity(skill.caster, \"Sling Back\")
	yield(get_tree().create_timer(0.3),\"timeout\")
	

func dmgMod(target=false):
	var p =  BattleMechanics.currentPlaying
	return 2.0 if BattleMechanics.getDirectionalDmg(p,target) == 1.25 else 1.0
"

