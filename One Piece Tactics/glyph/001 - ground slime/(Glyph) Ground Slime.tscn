script/source = "extends Node

var glyph
var turns 
func setup():
	turns = 3
	glyph = get_parent()
	BattleMechanics.connect(\"endEnemysTurn\",self,\"out\")
	for i in BattleMechanics.area.entities.get_child_count():
		if BattleMechanics.area.entities.get_child(i).player:
			BattleMechanics.area.entities.get_child(i).connect(\"walked\",self,\"step\",[BattleMechanics.area.entities.get_child(i)])
			BattleMechanics.area.entities.get_child(i).connect(\"pushTravel\",self,\"step\",[BattleMechanics.area.entities.get_child(i)])
			BattleMechanics.area.entities.get_child(i).connect(\"teleported\",self,\"tele\",[BattleMechanics.area.entities.get_child(i)])

func out():
	turns -= 1
	if turns == 0:
		BattleMechanics.removeGlyph(glyph)

func step(_from, to, who):
	if to == glyph.posit:
		affect(who)

func tele(_from, to, _tele, who):
	if to == glyph.posit:
		affect(who)

func affect(tgt):
	BattleMechanics.dealDmg([4,\"w\"],tgt,false,true)
	BattleMechanics.playAnim(glyph.extraStates[1],glyph.posit)
	BattleMechanics.removeGlyph(glyph)
"

