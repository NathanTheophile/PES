script/source = "extends Node

var delay = 0.0
var glyph
var caster
func setup():
	glyph = get_parent()
	caster = glyph.caster
	caster.connect(\"turn_start\", self, \"out\")

func out():
	yield(get_tree().create_timer(2.05 + delay),\"timeout\")
	var tgt = BattleMechanics.getEntityAt(glyph.posit)
	if tgt and tgt.player:
		BattleMechanics.dealDmg([25, \"e\"], tgt, glyph.caster)
	BattleMechanics.placeGlyph(glyph.extraStates[0],glyph.posit,caster)
	BattleMechanics.playAnim(glyph.extraStates[1],glyph.posit,false,\"ysort\")
	yield(get_tree().create_timer(0.1),\"timeout\")
	BattleMechanics.removeGlyph(glyph)
"

